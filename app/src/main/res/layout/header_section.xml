<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewSection"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/categ_pdd_landscape" />

    <LinearLayout
        android:id="@+id/textViewSection"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSectionName"
            style="@style/Font.Text.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Puy de dôme" />

        <TextView
            android:id="@+id/textViewSectionNbCameras"
            style="@style/Font.Text.RegularItalic"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:drawableEnd="@drawable/ic_arrow_right_extra_small"
            android:gravity="center_vertical"
            android:textColor="@color/grey_light"
            android:textSize="13sp"
            tools:text="2 webcams" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/weatherViewSection"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weatherViewSectionImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            tools:src="@drawable/ic_weather_cloud" />

        <TextView
            android:id="@+id/weatherViewSectionText"
            style="@style/Font.Text.Regular"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/blue"
            tools:text="12°C" />

    </LinearLayout>
</LinearLayout>