<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewWebcam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewWebcamImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <ProgressBar
            android:id="@+id/progressBarWebcam"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textViewWebcamError"
            style="@style/Font.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/grey_very_dark_transparent"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/grey_light"
            android:textSize="13sp"
            tools:text="@string/generic_not_up_to_date" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewWebcamName"
        style="@style/Font.Text.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/grey_light"
        android:textSize="15sp"
        tools:text="CamÃ©ra 1" />

</LinearLayout>